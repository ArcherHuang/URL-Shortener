<!-- ./views/index.handlebars -->

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h3 class="text-center mb-3">
        短網址產生器
        </h1>
        {{> messages}}
        <form action="/shortUrl" method="post" id="shortener-form">
          <div class="form-group">
            <input type="text" class="form-control" name="originalUrl" id="original-url-input"
              value="{{{newOriginalUrl}}}" required="required">
          </div>
          <div class="m-auto text-center">
            <button type="submit" class="btn btn-outline-dark">URL Shortener</button>
          </div>
        </form>
        <div class="mt-3">
          {{#if shortUrl}}
          <div class="alert alert-success" role="alert" id="error-message">
            <div>
              <span>原始網址為 </span>
              <a target="_blank" href="{{{originalUrl}}}">
                {{{originalUrl}}}
              </a>
            </div>
            <div>
              <span>短網址為 </span>
              <a target="_blank" href="/{{{shortId}}}">
                {{{shortUrl}}}
              </a>
            </div>
          </div>
          {{/if}}
        </div>
    </div>
  </div>
</div>